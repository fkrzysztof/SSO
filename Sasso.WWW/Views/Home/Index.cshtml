@using Sasso.Data.Data.Data
@using Sasso.Data.HelperClass
@{ 
    List<Offer> offers = ViewBag.Offer;
    List<Projects> projects = ViewBag.Project;
}

<!-- ALL inside-->
<!-- Main text-->
<section class="pt-5 pb-2" id="about">
    <div class="container px-4 px-lg-5 pt-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">
                    @ViewBag.MainText
                </h2>
                <hr class="divider divider-light" />
                <p class="text-white-75 mb-4 full-text text-justify-css">
                    @ViewBag.Text
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Offer -->
<section class="pt-5 pb-2" id="services">
    <div class="container px-4 px-lg-5">
        <h2 class="text-center mt-0">Oferta</h2>
        <hr class="divider" />

        <div class="row d-flex justify-content-center">

            @foreach (var item in offers)
            {
                <div class="col-md-4 my-4">
                    <div class="row px-sm-5 px-md-2 px-lg-5">
                        <div class="col-sm-12 text-center square" style="background-image: url( @(new CloudAccess().GetImg(item.MediaItem)));">
                        </div>
                        <div class="col-sm-12 mt-3 mb-md-0 mb-sm-5 text-box">
                            <div class="text-title">@item.Name</div>
                            @Html.Raw(item.Text)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Projects -->
<section class="py-5" id="project">
    <div class="container px-4 px-lg-5 text-center">
        <div class="row justify-content-center full-text">
            <div class="col-12">
                <h2 class="text-center mt-0">Szkolenia - Projekty</h2>
                <hr class="divider" />
            </div>
            <div class="col-12">
                <div class="bg-white text-justify full-text text-justify-css">
                    @Html.Raw(ViewBag.ProjectText)
                </div>
            </div>
            <div class="col-12 my-5">
                <span class="text-title">Katalog projektów</span>
            </div>
            <div class="12">
                <div class="row">
                    @foreach (var item in projects)
                    {
                        <div class="col-sm-4 my-3">
                            <div class="card shadow" style="width:100%">
                                <img src="@(new CloudAccess().GetImg(item.MediaItem))" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Okres realizacji projektu:</li>
                                    <li class="list-group-item">@item.StartProject.ToShortDateString() - @item.EndProject.ToShortDateString()</li>
                                </ul>
                                <div class="card-body">
                                    @*<a asp-action="About" asp-controller="Project" asp-route-id="@item.ProjectsID" class="btn btn-sm btn-primary">Więciej..</a>*@
                                    <a asp-action="About" asp-controller="Project" asp-route-id="@item.ProjectsID">Więciej..</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>



<!-- /All -->